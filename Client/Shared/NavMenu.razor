@using CapOverFlow.Shared 

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">CapOverFlow</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        @foreach (var tab in menutabs)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@tab.Href">
                    <span class="oi oi-@tab.Icon" aria-hidden="true"></span> @tab.Name
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {


    static List<MenuTab> menutabs = new List<MenuTab>
    {
        new MenuTab {Name = "Questions", Href="questions", Icon = "comment-square"},
        new MenuTab {Name = "Feed", Href="feed", Icon = "copywriting"},
        new MenuTab {Name = "BiblioCap", Href="bibliocap", Icon = "book"},
        new MenuTab {Name = "Paramètre", Href="tools", Icon = "target"}
    };

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
