@if (isOnBiblio)
{
    <div class="col-12">
        <div class="card form-rounded mb-3">
            <div class="card-header form-rounded" style="background-color:@Biblio.Tag.Ctg.CtgColor; color:@Biblio.Tag.Ctg.CtgTextColor;">
                <div class="row justify-content-between align-items-center">
                    <h5 class="pt-2"><span class="badge badge-secondary"><span class="oi oi-book mr-1"></span>@Biblio.Tag.TagName</span> @Biblio.PbcTitle (@Biblio.Usr.UsrLastname @Biblio.Usr.UsrFirstname)</h5>
                    @Biblio.PbcDate <button class="btn btn-secondary">Lecture</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-sm-6">
        <div class="card form-rounded mb-3" style="height: 40vh;">
            <div class="card-header form-rounded" style="background-color:@Biblio.Tag.Ctg.CtgColor; color:@Biblio.Tag.Ctg.CtgTextColor;">
                <div class="row justify-content-between align-items-center">
                    <h5 class="pt-2"><span class="badge badge-secondary">@Biblio.Tag.TagName</span> @Biblio.PbcTitle </h5>
                    @Biblio.Usr.UsrLastname @Biblio.Usr.UsrFirstname
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12" style="max-height: 15vh; overflow-y: scroll;">
                        <p class="card-text">@Biblio.PbcDescription</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <div class="row justify-content-end align-items-center">
                    <div class="mr-1">
                        @Biblio.PbcDate
                    </div>
                    <div>
                        <button class="btn btn-secondary">Commenter</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}





@code {
    [Parameter]
    public PublicationDto Biblio { get; set; } = new PublicationDto();
    [Parameter]
    public bool isOnBiblio { get; set; } = false;
}